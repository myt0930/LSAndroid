<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="true"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/date"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:text="5"
            android:gravity="center"
            android:textColor="#181818"
            android:textAlignment="center"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/day_of_week"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:textSize="10sp"
            android:text="(月)"
            android:textColor="#181818"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="ライブハウス名"
                android:textColor="#ee6557"
                android:paddingTop="2dp"
                android:textStyle="bold" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:id="@+id/list_fav_button"
                android:background="@null"
                android:src="@drawable/star_64"
                android:duplicateParentState="true"
                android:scaleType="fitEnd"
                android:paddingRight="10dp"
                android:paddingTop="2dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:maxLines="2"
            android:text="イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / "
            android:textColor="#16a6b6"
            android:paddingRight="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:maxLines="3"
            android:text="出演者 / 出演者 / 出演者 / 出演者 \n出演者 / 出演者 / 出演者 / 出演者 \n出演者 / 出演者 / 出演者 / 出演者 "
            android:textColor="#181818"
            android:paddingRight="10dp"
            android:textStyle="bold"
            android:paddingBottom="2dp" />
    </LinearLayout>
</LinearLayout>
