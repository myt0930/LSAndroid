<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="true"
    android:background="#f5f5f5" >

    <TextView
        android:id="@+id/date"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:textSize="12sp"
        android:text="5"
        android:gravity="center"
        android:textColor="#181818"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="ライブハウス名"
            android:textColor="#ee6557"
            android:paddingTop="2dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:maxLines="2"
            android:text="イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / イベントタイトル / "
            android:textColor="#16a6b6"
            android:paddingRight="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:maxLines="3"
            android:text="出演者 / 出演者 / 出演者 / 出演者 \n出演者 / 出演者 / 出演者 / 出演者 \n出演者 / 出演者 / 出演者 / 出演者 "
            android:textColor="#181818"
            android:paddingRight="10dp"
            android:textStyle="bold"
            android:paddingBottom="2dp" />
    </LinearLayout>
</LinearLayout>
